{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "composite": true,
    "paths": {
      "#weaver/core": ["../core/src/index.ts"],
      "#weaver/core/*": ["../core/src/*"],
      "#weaver/runtime": ["../runtime/src/index.ts"],
      "#weaver/runtime/*": ["../runtime/src/*"],
      "#weaver/adapters": ["../adapters/src/index.ts"],
      "#weaver/adapters/*": ["../adapters/src/*"],
      "#weaver/glamour": ["../glamour/src/index.ts"],
      "#weaver/glamour/*": ["../glamour/src/*"]
    }
  },
  "references": [
    { "path": "../core" },
    { "path": "../runtime" },
    { "path": "../adapters" },
    { "path": "../glamour" }
  ],
  "include": ["src"]
}
